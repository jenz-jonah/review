doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/css/dot.css')
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")

body
  form(name='registration' method='POST' action='/product/newproduct')
    h3 product form
    .row.g-1
      .col-md-3
        label.form-label(for='productname') productName
        input#field.form-control(type='text' name='productname')
        select#field.form-select
          option Beans
          option Maize Grain
          option G-nuts
          option cowpeas
          option soya Bean
      .col-md-3
        label.form-label(for='tonnage') tonnage(kgs)
        input#field.form-control(type='number' name='tonnage')
      .col-md-3
        label.form-label(for='type') Type
        input#field.form-control(type='text' name='type')
        select#field.form-select
          option Ceals
          option Grains
      .col-md-3
        label.form-label(for='start') Date
        input#start.form-control(type='date' name='strip-start' value='date')
      .col-md-3
        label.form-label(for='amount') Amount(ugx)
        input#field.form-control(type='number' name='amount')
      .col-md-12
        button.btn-submit(type='submit') submit

  a(href="/product/product-list") Go Back to List

script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')