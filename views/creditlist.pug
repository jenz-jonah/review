doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
body 
    .container
    h2.list credit list
    if credits.length
        table.table.table-dark
            thead.thead
                tr
                    th(scope='col') #
                    th(scope='col') Buyer Name
                    th(scope='col') Type of Produce
                    th(scope='col') Agent Name
                    th(scope='col') Contact 
                    th(scope='col') Due Date
                    th(scope='col') Location
                    th(scope='col') Tonnage(kgs)
                    th(scope='col') ProduceName
                    th(scope='col') National Id Nin
                    th(scope='col') Date of Dispatch
                    th(scope='col') Amount Due(ugx)
            tbody
            each credit in credits  
                tr
                    td #{credit._id} 
                    td #{credit.BuyerName}
                    td #{credit.TypeofProduce}
                    td #{credit.AgentName}
                    td #{credit.Contact}
                    td #{credit.DueDate}
                    td #{credit.Location}
                    td #{credit.Tonnage}
                    td #{credit.ProduceName}
                    td #{credit.NationalIdNin}
                    td #{credit.DateofDispatch}
                    td #{credit.AmountDue}
                    td 
                        form(method= "post",Action="/credits/credit-list")
                            input(type="hidden",name="_id",value=item._id)
                            button(type="submit") DELETE
                    td 
                        a(href="/editcredit/" + credit._id) edit 
    else                                
        p There are no registered credits
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js')