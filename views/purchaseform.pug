include include/nav
    block content 
link(rel='stylesheet' href='/css/style.css')
link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
body
  form(name='registration' method='POST' action='/purchase/newpurchase')
   h3 purchase order
    .mb-3
      label.form-label(for='Produce Name') Produce Name
      input#name.form-control(type='text' name='producename')
      select#ProduceName(name='produce name')
        option Beans
        option Maize Grain
        option G-nuts
        option cowpeas
        option Soya Bean

    .mb-3
      label.form-label(for=' Nameofbuyer')  Name Of Buyer 
      input#field.form-control(type='text' name='nameofbuyer')
      select#Producename(name='nameofbuyer')
        option Other Companies
        option Individuals
        option Own Farms
    .mb-3
      label.form-label(for='sales agent') sales agent
      input#field.form-control(type='text' name='sales agent')
      
        
    .mb-3
      label.form-label(for='tonnage') Produce in tonnage(1000kgs)
      input#field.form-control(type='number' name='tonnage')
    .mb-3
      label.form-label(for='start') Date 
      input#field.form-control(type='date' name='strip-start' value='date')
    .mb-3
      label.form-label(for='appt') Time
      input#field.form-control(type='time' name='appt')
    button.btn.btn-primary(type='submit') Submit
    a(href="/purchase/purchase-list") Go Back to List
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
