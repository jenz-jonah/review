body
  form(name='registration' method='POST' action='/sale/neworder')
    .mb-3
      label.form-label(for='customer') customer
      input#name.form-control(type='text' name='customer')
    .mb-3
      label.form-label(for='item') product 
      input#field.form-control(type='text' name='product')
    .mb-3
      label.form-label(for='type') Account Type
      input#field.form-control(type='text' name='acconttype')
      select#accontType(name='type')
        option on credit 
        option cash 
    .mb-3
      label.form-label(for='tonnage') tonnage
      input#field.form-control(type='number' name='tonnage')
    .mb-3
      label.form-label(for='price') price 
      input#field.form-control(type='number' name='price')
    .mb-3
      label.form-label(for='amount') amount 
      input#field.form-control(type='number' name='amount')
    button.btn.btn-primary(type='submit') Submit
    a(href="/worker/worker-list") Go Back to List
