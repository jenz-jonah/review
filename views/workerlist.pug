body
    .container
    h3 List of employees

    if workers. length
        table.table
            thead.thead-dark
                tr
                    
                    th(scope='col') Name
                    th(scope='col') Age
                    th(scope='col') Field
                    th(scope='col') Salary
                    th(scope='col') Action 
            tbody
            each worker in workers 
                tr
                    
                    td #{worker.name}
                    td #{worker.age}
                    td #{worker.field}
                    td #{worker.salary}
                    td
                        form(method= "Post",Action="/workers/worker-list")
                            input(type="hidden",name="_id",value=worker._id) 
                            button(type="submit") DELETE
                    td
                        a(href="/editworker/" + worker._id) edit 
    else 
        p there are no registered workers        
